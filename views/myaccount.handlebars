

{{#if user}}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/home">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">My Account</li>
    </ol>
</nav>
<div class="row row-content">
    
    <div class="col-md-3" style="margin: 15px;">
        <div class="card-body">
            <div class="card-title">
                {{#if image}}
                    <img src="../public/img/{{user.email}}-image.jpg" style="width:200px; height:150px">
                {{else}}
                    <form action="upload" enctype="multipart/form-data" method="post">
                        <label for="upload">Upload your Image! (Only jpg file supported) </label>
                        <input type="file" name="upload" multiple="multiple">
                        <input type="submit" value="Upload file" />
                    </form>
                {{/if}}
            </div>
                <h5 class="card-title"> My Last Name: {{user.lastname}} </h5>
                <h5 class="card-title"> My First name: {{user.firstname}} </h5>

            </div>
            <ul class="list-group list-group-flush">
                
                <li class="list-group-item"> My Email: {{user.email}} </li>
                <li class="list-group-item">
                    <a href="/cart/{{user._id}}"> View My Cart </a> 
                </li>
                <li class="list-group-item"> 
                    <a href="/wishlist/{{user._id}}"> View My WishList </a> 
                </li>
                <li class="list-group-item">
                    <a href="/order/{{user._id}}"> View Finished Order </a>
                </li>

            </ul>
        </div>
    </div>
    
</div>
{{/if}}