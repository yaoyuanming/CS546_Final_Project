{{#if error}}
    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <strong> Error </strong>
        {{ error }}
    </div>
    {{/if}}
<div class="row row-content">
    
    {{#each cart}}
    <div class="col-md-3" style="margin: 15px;">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="../public/img/test.jpg" alt="card image">
            <div class="card-body">
                <h5 class="card-title"> {{this.title}} </h5>
                <p class="card-text"> {{this.description}} </p>

            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Price: $ {{this.price}} </li>
                <li class="list-group-item">Category:  {{this.category}} </li>
                <li class="list-group-item"> {{this.quantity}} Left</li>

            </ul>
        </div>
    </div>
    {{/each}}
</div>